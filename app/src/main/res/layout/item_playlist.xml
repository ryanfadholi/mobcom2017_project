<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playlist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cover_item"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/p200x200"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cover_item"
            android:id="@+id/description_item"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/title"
                android:text="Judul Lagu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:id="@+id/artist"
                android:text="Artist"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/vote_btn"
                android:layout_height="@dimen/vote_btn"
                android:id="@+id/upvote"
                android:tint="#9E9E9E"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_arrow_up_bold"/>

            <ImageView
                android:layout_width="@dimen/vote_btn"
                android:layout_height="@dimen/vote_btn"
                android:id="@+id/downvote"
                android:tint="#9E9E9E"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_arrow_down_bold"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>